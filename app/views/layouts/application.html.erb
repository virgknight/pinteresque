<!DOCTYPE html>
<html>
  <head>
    <title>Pinteresque</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" type="image/png" href="<%= image_url('pinterest_logo.png')%>" >

    <%= javascript_include_tag 'application' %>

    <meta property="og:title" content="Pinteresque">
    <meta property="og:image" content="<%= image_url('homepage.png')%>" >
    <meta property="og:description" content="A full stack clone of Pinterest">

    <script>
      window.round_logo ="<%= image_url("pinterest_logo.png") %>"
    </script>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
